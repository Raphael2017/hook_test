ITableMetaData

SELECT COLUMN_NAME
    FROM (     SELECT COLUMN_NAME, POSITION FROM SYS.TABLE_COLUMNS WHERE SCHEMA_NAME = CURRENT_USER AND TABLE_NAME =  ?
        UNION  SELECT COLUMN_NAME, POSITION FROM SYS.VIEW_COLUMNS  WHERE SCHEMA_NAME = CURRENT_USER AND VIEW_NAME =  ?  )
            ORDER BY POSITION;

